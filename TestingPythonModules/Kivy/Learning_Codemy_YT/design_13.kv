<Button>
    font_size: 32
    # remember t ouse size_hint on button when using float layout
    size_hint: (0.3, 0.3)

<MyLayout>

    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Top Left"
            # {"x", "y", "top", "bottom", "left", "right"} - takes values between 0 and 1
            pos_hint: {"x":0, "top":1}

        Button:
            text: "Top Right"
            pos_hint: {"x":0.7, "top":1}

        Button:
            text: "Bottom Left"
            pos_hint: {"x":0}

        Button:
            text: "Bottom Right"
            pos_hint: {"x":0.7, "bottom":1}

        Button:
            text: "Center"
            pos_hint: {"x":0.35, "y":0.35}