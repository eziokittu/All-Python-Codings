# 9 - CHnaging Default widget

# 10 - Changing background color and text

<Label>
	font_size: 32
	
<Button>
	font_size: 48
	baclground_normal: ""
	background_color: (0/255, 200.255, 255/255, 1)

<TextInput>
	background_color: (150/255, 150.255, 150/255, 1)

<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		spacing: 10
		padding: 20

		Label:
			text: "This is a Label"
			font_size: 96
			background_color: (0,0,1,1)
			canvas.before:
				Color:
					rgba: self.background_color
				Rectangle:
					size: self.size
					pos: self.pos
		TextInput:
			multiline: False

		Label:
			text: "Marks"
		TextInput:
			multiline: False

		Button:
			text: "Submit"
			background_normal: ""
			background_color: (200/255.0, 100/255.0, 100/255.0, 1)
		Button:
			text: "Contact us!"